<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light weight -->
    <font
        android:font="@font/mona_sans_light"
        android:fontStyle="normal"
        android:fontWeight="300" />

    <!-- Light italic weight -->
    <font
        android:font="@font/mona_sans_extra_light_italic"
        android:fontStyle="italic"
        android:fontWeight="300" />

    <!-- Regular weight -->
    <font
        android:font="@font/mona_sans_regular"
        android:fontStyle="normal"
        android:fontWeight="400" />

    <!-- Italic weight -->
    <font
        android:font="@font/mona_sans_regular_italic"
        android:fontStyle="italic"
        android:fontWeight="400" />

    <!-- Medium weight -->
    <font
        android:font="@font/mona_sans_medium"
        android:fontStyle="normal"
        android:fontWeight="500" />

    <!-- Medium italic weight -->
    <font
        android:font="@font/mona_sans_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500" />

    <!-- Semibold weight -->
    <font
        android:font="@font/mona_sans_semi_bold"
        android:fontStyle="normal"
        android:fontWeight="600" />

    <!-- Semibold italic weight -->
    <font
        android:font="@font/mona_sans_semi_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="600" />

    <!-- Bold weight -->
    <font
        android:font="@font/mona_sans_bold"
        android:fontStyle="normal"
        android:fontWeight="700" />

    <!-- Bold italic weight -->
    <font
        android:font="@font/mona_sans_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700" />

    <!-- Extrabold weight -->
    <font
        android:font="@font/mona_sans_extra_bold"
        android:fontStyle="normal"
        android:fontWeight="800" />

    <!-- Extrabold italic weight -->
    <font
        android:font="@font/mona_sans_extra_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="800" />

    <!-- Black weight -->
    <font
        android:font="@font/mona_sans_black"
        android:fontStyle="normal"
        android:fontWeight="900" />

    <!-- Black italic weight -->
    <font
        android:font="@font/mona_sans_black_italic"
        android:fontStyle="italic"
        android:fontWeight="900" />

</font-family>